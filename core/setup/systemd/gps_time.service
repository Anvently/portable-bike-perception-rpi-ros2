[Unit]
Description=Synchronisation de l'heure syst√®me via GPS
After=network.target
Wants=network.target
StartLimitIntervalSec=50
StartLimitBurst=5

[Service]
Type=simple
EnvironmentFile=/home/cycliste/cyclosafe/core/setup/.env
ExecStart=/bin/bash -c "source $SCRIPTS_PATH/gps_time.sh"
